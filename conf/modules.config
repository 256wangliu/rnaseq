/*
 * --------------------------------------------------
 *  Config file for defining DSL2 per module options
 * --------------------------------------------------
 *
 *   Available keys to override module options:
 *       args           = Additional arguments appended to command in module.
 *       args2          = Second set of arguments appended to command in module (multi-tool modules).
 *       publish_by_id  = Publish results in separate folders by meta.id value.
 *       publish_dir    = Directory to publish results.
 *       publish_files  = Groovy map where key = "file_ext" and value = "directory" to only publish results
 *                        for a particular file extension. The value of "directory" is appended to the standard
 *                        "publish_dir" path as defined above.
 *                        If publish_files == null (unspecified)  - All files are published.
 *                        If publish_files == Map [:] (empty map) - No files are published.
 *       suffix         = File name suffix for output files
 *
 */

params {
    modules {
        'gffread' {
            args          = "--keep-exon-attrs -F -T"
        }
        'cat_fastq' {
            publish_files = [:]
        }
        'fastqc' {
            args          = "--quiet"
        }
        'trimgalore' {
            args          = "--fastqc"
            publish_files = ['txt':'', 'html':'fastqc', 'zip':'fastqc']
        }
        'umitools_extract' {
            args          = ""
            publish_files = ['log':'']
        }
        'sortmerna' {
            args          = "--num_alignments 1 --fastx -v"
            publish_files = ['log':'']
        }
        'star_genomegenerate' {
            publish_dir   = "genome/index"
            publish_files = [:]
        }
        'star_align' {
            args          = "--quantMode TranscriptomeSAM --twopassMode Basic --outSAMtype BAM Unsorted --readFilesCommand zcat --runRNGseed 0"
            publish_files = ['out':'log', 'tab':'log']
        }
        'hisat2_build' {
            publish_dir   = "genome/index"
            publish_files = [:]
        }
        'hisat2_align' {
            args          = "--met-stderr --new-summary --dta"
            publish_files = ['log':'log']
        }
        'samtools_sort' {
            publish_dir   = ""
            publish_files = [:]
            suffix        = ".sorted"
        }
        'preseq_lcextrap' {
            args          = "-verbose -bam -seed 1"
        }
        'umitools_dedup_genome' {
            publish_files = ['tsv':'']
            suffix        = ".genome.umi_dedup.sorted"
        }
        'samtools_sort_umitools_dedup' {
            suffix        = ".transcriptome.sorted"
        }
        'umitools_dedup_transcriptome' {
            publish_files = ['tsv':'']
            suffix        = ".transcriptome.umi_dedup.sorted"
        }
        'picard_markduplicates' {
            args          = "ASSUME_SORTED=true REMOVE_DUPLICATES=false VALIDATION_STRINGENCY=LENIENT TMP_DIR=tmp"
            suffix        = ".markdup.sorted"
            publish_files = ['bam':'', 'metrics':'picard_metrics']
        }
        'picard_markduplicates_samtools' {
            suffix        = ".markdup.sorted"
            publish_files = ['bai':'', 'stats':'samtools_stats', 'flagstat':'samtools_stats', 'idxstats':'samtools_stats']
        }
        'rsem_preparereference' {
            publish_dir   = "genome/index"
            publish_files = [:]
        }
        'rsem_calculateexpression' {
            args          = "--bam --estimate-rspd --append-names"
        }
        'merge_counts_rsem' {
            args          = ""
        }
        'salmon_index' {
            args          = ""
            publish_dir   = "genome/index"
            publish_files = [:]
        }
        'salmon_quant' {
            args          = "--validateMappings --seqBias --useVBOpt --gcBias"
        }
        'merge_counts_salmon' {
            args          = ""
        }
        'picard_collectmultiplemetrics' {
            args          = "VALIDATION_STRINGENCY=LENIENT TMP_DIR=tmp"
            publish_dir   = "bwa/mergedLibrary/picard_metrics"
            suffix        = ".mLb.clN.sorted"
        }
        'bedtools_genomecov' {
            publish_dir   = "bwa/mergedLibrary/bigwig"
            suffix        = ".mLb.clN"
        }
        'ucsc_bedgraphtobigwig' {
            publish_dir   = "bwa/mergedLibrary/bigwig"
            suffix        = ".mLb.clN"
        }
        'subread_featurecounts' {
            args          = "-F SAF -O --fracOverlap 0.2"
            publish_dir   = "bwa/mergedLibrary/macs2"
        }
        'multiqc' {
            publish_dir   = "multiqc"
        }
    }
}
